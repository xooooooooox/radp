root = true

[*]
insert_final_newline = true
trim_trailing_whitespace = true

[*.{adoc,bat,groovy,html,java,js,jsp,kt,kts,md,properties,py,rb,sh,sql,svg,txt,xml,xsd}]
charset = utf-8

[*.{groovy,java,kt,kts,xml,xsd}]
indent_style = tab
indent_size = 4
end_of_line = lf

[{.coding/idea,.idea}/**.xml]
indent_style = space
indent_size = 2

[radp-archetypes/scaffold-*/src/main/resources/archetype-resources/{.idea,.coding/idea}/**.xml]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false