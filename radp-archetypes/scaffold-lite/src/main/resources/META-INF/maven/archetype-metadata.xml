<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor
		xsi:schemaLocation="https://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.1.0 http://maven.apache.org/xsd/archetype-descriptor-1.1.0.xsd"
		name="radp-archetype-lite"
		xmlns="https://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.1.0"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<requiredProperties>
		<!-- project gav -->
		<requiredProperty key="groupId">
			<defaultValue>space.x9x.demo</defaultValue>
		</requiredProperty>
		<requiredProperty key="artifactId">
			<defaultValue>scaffold-lite-demo</defaultValue>
		</requiredProperty>
		<requiredProperty key="version">
			<defaultValue>1.0-SNAPSHOT</defaultValue>
		</requiredProperty>
		<requiredProperty key="package">
			<defaultValue>space.x9x.demo</defaultValue>
		</requiredProperty>

		<!-- radp-parent version -->
		<requiredProperty key="radpVersion">
			<defaultValue>2.26.1</defaultValue>
		</requiredProperty>

		<!-- spring application.yaml 占位符默认值 -->
		<requiredProperty key="appName">
			<defaultValue>scaffold-lite-demo</defaultValue>
		</requiredProperty>
		<requiredProperty key="appPort">
			<defaultValue>8888</defaultValue>
		</requiredProperty>
		<requiredProperty key="appOwner">
			<defaultValue>x9x</defaultValue>
		</requiredProperty>
		<requiredProperty key="appEmail">
			<defaultValue>xozoz.sos@gmail.com</defaultValue>
		</requiredProperty>

		<!-- docker -->
		<requiredProperty key="imageRegistry">
			<defaultValue>harbor.example.com</defaultValue>
		</requiredProperty>
		<requiredProperty key="imageNamespace">
			<defaultValue>xooooooooox</defaultValue>
		</requiredProperty>
	</requiredProperties>

	<fileSets>
		<!-- .coding -->
		<fileSet encoding="UTF-8">
			<directory>.coding</directory>
			<includes>
				<include>**/**</include>
			</includes>
		</fileSet>

		<!-- .github -->
		<fileSet encoding="UTF-8">
			<directory>.github</directory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>

		<!-- .idea -->
		<fileSet encoding="UTF-8">
			<directory>.idea</directory>
			<includes>
				<include>**/**</include>
			</includes>
		</fileSet>

		<!-- .devcontainer -->
		<fileSet filtered="true" encoding="UTF-8">
			<directory>.devcontainer</directory>
			<includes>
				<include>.env</include>
				<include>env/**</include>
				<include>devcontainer.json</include>
				<include>templates/**/docker-compose.yml</include>
				<include>volumes/**/*.sql</include>
			</includes>
		</fileSet>
		<fileSet encoding="UTF-8">
			<directory>.devcontainer</directory>
			<includes>
				<include>**</include>
				<include>**/**</include>
			</includes>
		</fileSet>

		<!-- .mvn -->
		<fileSet encoding="UTF-8">
			<directory>.mvn</directory>
			<includes>
				<include>**/*.config</include>
				<include>**/*.properties</include>
				<include>**/*.xml</include>
			</includes>
		</fileSet>
		<fileSet encoding="UTF-8">
			<directory/>
			<includes>
				<include>mvnw</include>
				<include>mvnw.cmd</include>
			</includes>
		</fileSet>

		<!-- docs -->
		<fileSet filtered="true" encoding="UTF-8">
			<directory>docs/mdbook</directory>
			<includes>
				<include>**/**</include>
			</includes>
		</fileSet>
		<fileSet encoding="UTF-8">
			<directory>docs</directory>
			<includes>
				<include>api/**</include>
				<include>drawio/**</include>
				<include>*.drawio</include>
			</includes>
		</fileSet>

		<!-- writerside -->
		<fileSet filtered="true" encoding="UTF-8">
			<directory>Writerside</directory>
			<includes>
				<include>**/*.xml</include>
				<include>**/*.tree</include>
				<include>**/*.md</include>
				<include>**/*.cfg</include>
			</includes>
		</fileSet>
		<fileSet encoding="UTF-8">
			<directory>Writerside</directory>
			<includes>
				<include>**/**</include>
			</includes>
		</fileSet>

		<!-- / -->
		<fileSet filtered="true" encoding="UTF-8">
			<directory/>
			<includes>
				<include>README.md</include>
				<include>.gitlab-ci.yml</include>
				<include>.dockerignore</include>
			</includes>
		</fileSet>
		<fileSet encoding="UTF-8">
			<directory/>
			<includes>
				<include>*.md</include>
				<include>.gitignore</include>
				<include>.java-version</include>
				<include>.tool-versions</include>
				<include>.gitattributes</include>
				<include>.springjavaformatconfig</include>
				<include>.editorconfig</include>
			</includes>
		</fileSet>
	</fileSets>

	<modules>
		<module id="${rootArtifactId}-types" dir="__rootArtifactId__-types" name="${rootArtifactId}-types">
			<fileSets>
				<fileSet filtered="true" packaged="true" encoding="UTF-8">
					<directory>src/main/java</directory>
					<includes>
						<include>**/*.java</include>
					</includes>
				</fileSet>
				<fileSet packaged="true" encoding="UTF-8">
					<directory>src/main/java</directory>
					<includes>
						<include>**/*.gitkeep</include>
					</includes>
				</fileSet>
				<fileSet encoding="UTF-8">
					<directory>src/main/resources/META-INF</directory>
					<includes>
						<include>**/*</include>
					</includes>
				</fileSet>
			</fileSets>
		</module>
		<module id="${rootArtifactId}-domain" dir="__rootArtifactId__-domain" name="${rootArtifactId}-domain">
			<fileSets>
				<fileSet filtered="true" packaged="true" encoding="UTF-8">
					<directory>src/main/java</directory>
					<includes>
						<include>**/*.java</include>
					</includes>
				</fileSet>
			</fileSets>
		</module>
		<module id="${rootArtifactId}-infrastructure" dir="__rootArtifactId__-infrastructure"
				name="${rootArtifactId}-infrastructure">
			<fileSets>
				<fileSet filtered="true" packaged="true" encoding="UTF-8">
					<directory>src/main/java</directory>
					<includes>
						<include>**/*.java</include>
					</includes>
				</fileSet>
			</fileSets>
		</module>
		<module id="${rootArtifactId}-trigger" dir="__rootArtifactId__-trigger" name="${rootArtifactId}-trigger">
			<fileSets>
				<fileSet filtered="true" packaged="true" encoding="UTF-8">
					<directory>src/main/java</directory>
					<includes>
						<include>**/*.java</include>
					</includes>
				</fileSet>
			</fileSets>
		</module>
		<module id="${rootArtifactId}-app" dir="__rootArtifactId__-app" name="${rootArtifactId}-app">
			<fileSets>
				<fileSet filtered="true" packaged="true" encoding="UTF-8">
					<directory>src/main/java</directory>
					<includes>
						<include>**/*.java</include>
					</includes>
				</fileSet>
				<fileSet packaged="true" encoding="UTF-8">
					<directory>src/main/java</directory>
					<includes>
						<include>**/*.gitkeep</include>
					</includes>
				</fileSet>
				<fileSet filtered="true" encoding="UTF-8">
					<directory>src/main/resources</directory>
					<includes>
						<include>**/application*.yaml</include>
						<include>**/application*.yml</include>
					</includes>
				</fileSet>
				<fileSet filtered="true" encoding="UTF-8">
					<directory>src/main/resources/db/config</directory>
					<includes>
						<include>*.properties</include>
					</includes>
				</fileSet>
				<fileSet encoding="UTF-8">
					<directory>src/main/resources/db</directory>
					<includes>
						<include>**/*</include>
						<include>**/*.gitkeep</include>
					</includes>
				</fileSet>
				<fileSet encoding="UTF-8">
					<directory>src/main/resources/mybatis</directory>
					<includes>
						<include>**/**</include>
						<include>**/.gitkeep</include>
						<include>.gitkeep</include>
					</includes>
				</fileSet>
				<fileSet encoding="UTF-8">
					<directory>src/main/resources</directory>
					<includes>
						<include>**/.gitkeep</include>
						<include>**/*.yaml</include>
						<include>**/*.yml</include>
						<include>**/*.properties</include>
						<include>**/*.xml</include>
					</includes>
				</fileSet>
				<fileSet filtered="true" packaged="true" encoding="UTF-8">
					<directory>src/test/java</directory>
					<includes>
						<include>**/*.java</include>
					</includes>
				</fileSet>
				<fileSet filtered="true" packaged="true" encoding="UTF-8">
					<directory>src/test/groovy</directory>
					<includes>
						<include>**/*.groovy</include>
					</includes>
				</fileSet>
				<fileSet filtered="true" encoding="UTF-8">
					<directory>src/test/resources</directory>
					<includes>
						<include>**/*.xml</include>
						<include>**/*.yaml</include>
						<include>**/*.yml</include>
						<include>**/*.properties</include>
					</includes>
				</fileSet>

				<fileSet filtered="true" encoding="UTF-8">
					<directory>src/main/assembly</directory>
					<includes>
						<include>**/*.*</include>
					</includes>
				</fileSet>

				<fileSet filtered="true" encoding="UTF-8">
					<directory>src/main/docker</directory>
					<includes>
						<include>Dockerfile</include>
						<include>start.sh</include>
						<include>**/*.xml</include>
					</includes>
				</fileSet>
				<fileSet encoding="UTF-8">
					<directory>src/main/docker</directory>
					<includes>
						<include>**/**</include>
					</includes>
				</fileSet>
			</fileSets>
		</module>
	</modules>
</archetype-descriptor>
