<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor
        xsi:schemaLocation="https://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.1.0 http://maven.apache.org/xsd/archetype-descriptor-1.1.0.xsd"
        name="radp-archetype-tiny"
        xmlns="https://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.1.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <requiredProperties>
        <!-- project gav -->
        <requiredProperty key="groupId">
            <defaultValue>space.x9x</defaultValue>
        </requiredProperty>
        <requiredProperty key="artifactId">
            <defaultValue>scaffold-tiny-demo</defaultValue>
        </requiredProperty>
        <requiredProperty key="version">
            <defaultValue>1.0-SNAPSHOT</defaultValue>
        </requiredProperty>
        <requiredProperty key="package">
            <defaultValue>space.x9x.demo</defaultValue>
        </requiredProperty>

        <!-- radp-parent version -->
        <requiredProperty key="radpVersion">
            <defaultValue>2.18</defaultValue>
        </requiredProperty>

        <!-- spring application.yaml 占位符默认值 -->
        <requiredProperty key="appName">
            <defaultValue>scaffold-tiny-demo</defaultValue>
        </requiredProperty>
        <requiredProperty key="appPort">
            <defaultValue>8888</defaultValue>
        </requiredProperty>
        <requiredProperty key="appOwner">
            <defaultValue>x9x</defaultValue>
        </requiredProperty>
        <requiredProperty key="appEmail">
            <defaultValue>xozoz.sos@gmail.com</defaultValue>
        </requiredProperty>

        <!-- 其他 -->
        <requiredProperty key="gitignore">
            <defaultValue>.gitignore</defaultValue>
        </requiredProperty>
    </requiredProperties>

    <fileSets>
        <!-- docs -->
        <fileSet filtered="true" encoding="UTF-8">
            <directory/>
            <includes>
                <include>Dockerfile</include>
                <include>build.sh</include>
                <include>start.sh</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" encoding="UTF-8">
            <directory>docs/dev-ops</directory>
            <includes>
                <include>**/.env</include>
                <include>**/.env.app.template</include>
                <include>volumes/mysql/**/*.sql</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" encoding="UTF-8">
            <directory/>
            <includes>
                <include>README.md</include>
                <include>.gitlab-ci.yml</include>
            </includes>
        </fileSet>
        <fileSet encoding="UTF-8">
            <directory/>
            <includes>
                <include>*.md</include>
                <include>__gitignore__</include>
                <include>.java-version</include>
                <include>.tool-versions</include>
            </includes>
        </fileSet>
        <fileSet encoding="UTF-8">
            <directory>docs/api</directory>
            <includes>
                <include>**/**</include>
            </includes>
        </fileSet>
        <fileSet encoding="UTF-8">
            <directory>docs</directory>
            <includes>
                <include>dev-ops/**</include>
                <include>**/*.drawio</include>
                <include>*.drawio</include>
            </includes>
        </fileSet>
        <!-- github -->
        <fileSet encoding="UTF-8">
            <directory>.github</directory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <!-- mvn -->
        <fileSet encoding="UTF-8">
            <directory>.mvn</directory>
            <includes>
                <include>**/*.config</include>
                <include>**/*.properties</include>
                <include>**/*.xml</include>
            </includes>
        </fileSet>
        <fileSet encoding="UTF-8">
            <directory/>
            <includes>
                <include>mvnw</include>
                <include>mvnw.cmd</include>
            </includes>
        </fileSet>

        <fileSet filtered="true" packaged="true" encoding="UTF-8">
            <directory>src/main/java</directory>
            <includes>
                <include>**/*.java</include>
            </includes>
        </fileSet>
        <fileSet packaged="true" encoding="UTF-8">
            <directory>src/main/java</directory>
            <includes>
                <include>**/*.gitkeep</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" encoding="UTF-8">
            <directory>src/main/resources</directory>
            <includes>
                <include>**/application*.yaml</include>
                <include>**/application*.yml</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" encoding="UTF-8">
            <directory>src/main/resources/db/config</directory>
            <includes>
                <include>liquibase*.properties</include>
            </includes>
        </fileSet>
        <fileSet encoding="UTF-8">
            <directory>src/main/resources/db</directory>
            <includes>
                <include>**/**</include>
            </includes>
        </fileSet>
        <fileSet encoding="UTF-8">
            <directory>src/main/resources/mybatis</directory>
            <includes>
                <include>**/**</include>
            </includes>
        </fileSet>
        <fileSet encoding="UTF-8">
            <directory>src/main/resources/META-INF</directory>
            <includes>
                <include>**/**</include>
            </includes>
        </fileSet>
        <fileSet encoding="UTF-8">
            <directory>src/main/resources</directory>
            <includes>
                <include>**/*.gitkeep</include>
                <include>**/*.yaml</include>
                <include>**/*.yml</include>
                <include>**/*.properties</include>
                <include>**/*.xml</include>
            </includes>
        </fileSet>

        <fileSet filtered="true" packaged="true" encoding="UTF-8">
            <directory>src/test/java</directory>
            <includes>
                <include>**/*.java</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" encoding="UTF-8">
            <directory>src/test/resources</directory>
            <includes>
                <include>**/*.xml</include>
                <include>**/*.yaml</include>
                <include>**/*.yml</include>
                <include>**/*.properties</include>
            </includes>
        </fileSet>

        <fileSet filtered="true" encoding="UTF-8">
            <directory>src/main/docker</directory>
            <includes>
                <include>**/*.xml</include>
            </includes>
        </fileSet>
        <fileSet encoding="UTF-8">
            <directory>src/main/docker</directory>
            <includes>
                <include>**/**</include>
            </includes>
        </fileSet>
    </fileSets>
</archetype-descriptor>
