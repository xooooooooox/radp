<?xml version="1.0" encoding="UTF-8"?>
<!--
标准应用场景的日志配置
适用于常规的非Spring Boot应用，提供完整的日志功能。

特点：
1. 提供彩色控制台输出
2. 支持文件日志输出和滚动策略
3. 支持按日志级别分类存储
-->

<included>
    <include resource="logback/classic/components/console.xml"/>
    <include resource="logback/classic/components/file.xml"/>

    <!-- 默认的root logger配置 -->
    <root level="${logging.level.root:-info}">
        <appender-ref ref="radp_console_appender"/>
        <appender-ref ref="radp_file_appender_async"/>
    </root>

    <!-- 根据环境配置额外的文件日志 -->
    <!-- 在非Spring Boot应用中，可以通过系统属性logging.environment设置环境 -->
    <if condition='property("logging.environment").equals("dev") || property("logging.environment").equals("test") || property("logging.environment").equals("local")'>
        <then>
            <root level="${logging.level.root:-info}">
                <appender-ref ref="radp_console_appender"/>
                <appender-ref ref="radp_file_appender_filter_debug_async"/>
                <appender-ref ref="radp_file_appender_filter_info_async"/>
                <appender-ref ref="radp_file_appender_filter_warn_async"/>
                <appender-ref ref="radp_file_appender_filter_error_async"/>
            </root>
        </then>
    </if>
    <if condition='property("logging.environment").equals("sit") || property("logging.environment").equals("uat") || property("logging.environment").equals("prod")'>
        <then>
            <root level="${logging.level.root:-info}">
                <appender-ref ref="radp_file_appender_filter_debug_async"/>
                <appender-ref ref="radp_file_appender_filter_info_async"/>
                <appender-ref ref="radp_file_appender_filter_warn_async"/>
                <appender-ref ref="radp_file_appender_filter_error_async"/>
            </root>
        </then>
    </if>

</included>