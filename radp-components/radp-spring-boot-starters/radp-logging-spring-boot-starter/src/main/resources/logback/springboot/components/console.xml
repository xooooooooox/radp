<?xml version="1.0" encoding="UTF-8"?>

<!--
控制台输出配置
使用Spring Boot的彩色日志格式
-->

<included>
    <include resource="logback/springboot/components/common.xml"/>

    <!--
    user_console_pattern: parse from logging.pattern.console
    radp_console_pattern: radp customize console pattern
    default_value: same as org/springframework/boot/logging/logback/defaults.xml
    -->
    <property name="CONSOLE_LOG_PATTERN"
              value="${userConsoleLogPattern:-${radp_console_log_pattern}}"/>
    <property name="CONSOLE_LOG_CHARSET"
              value="${userConsoleLogCharset:-${radp_console_log_charset}}"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">　　　　
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
            <charset>${CONSOLE_LOG_CHARSET}</charset>
        </encoder>
    </appender>
</included>
