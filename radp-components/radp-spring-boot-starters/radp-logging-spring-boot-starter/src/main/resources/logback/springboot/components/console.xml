<?xml version="1.0" encoding="UTF-8"?>

<!--
控制台输出配置
使用Spring Boot的彩色日志格式
-->

<included>
    <include resource="logback/springboot/components/common.xml"/>

    <!--
    user_console_pattern: parse from logging.pattern.console
    radp_console_pattern: radp customize console pattern
    default_value: same as org/springframework/boot/logging/logback/defaults.xml
    -->
    <property name="CONSOLE_LOG_PATTERN"
              value="${userConsoleLogPattern:-${radp_console_log_pattern:-${CONSOLE_LOG_PATTERN:-%clr(%d{${LOG_DATEFORMAT_PATTERN:-yyyy-MM-dd'T'HH:mm:ss.SSSXXX}}){faint} %clr(${LOG_LEVEL_PATTERN:-%5p}){} %clr(${PID:-}){magenta} %clr(--- %esb(){APPLICATION_NAME}%esb{APPLICATION_GROUP}[%15.15t] ${LOG_CORRELATION_PATTERN:-}){faint}%clr(%-40.40logger{39}){cyan} %clr(:){faint} %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}}}}"/>
    <property name="CONSOLE_LOG_CHARSET"
              value="${userConsoleLogCharset:-${radp_console_log_charset:-${CONSOLE_LOG_CHARSET:-${file.encoding:-UTF-8}}}}"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">　　　　
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
            <charset>${CONSOLE_LOG_CHARSET}</charset>
        </encoder>
    </appender>
</included>
