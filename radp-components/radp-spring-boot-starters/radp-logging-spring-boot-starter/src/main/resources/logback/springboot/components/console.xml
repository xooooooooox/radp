<?xml version="1.0" encoding="UTF-8"?>

<!--
控制台输出配置
使用Spring Boot的彩色日志格式
-->

<included>
    <include resource="logback/springboot/components/common.xml"/>

    <!--
    user_console_pattern: parse from logging.pattern.console
    radp_console_pattern: radp customize console pattern
    default_value: same as org/springframework/boot/logging/logback/defaults.xml
    -->
    <property name="consolePattern"
              value="${userConsoleLogPattern:-${radpConsoleLogPattern}}"/>
    <property name="consoleLogCharset"
              value="${userConsoleLogCharset:-${radpConsoleLogCharset}}"/>

    <!-- Only create a console appender if consolePattern is not empty -->
    <if condition='!isDefined("userConsoleLogPattern") || !property("userConsoleLogPattern").isEmpty()'>
        <then>
            <appender name="radp_console_appender" class="ch.qos.logback.core.ConsoleAppender">　　　　
                <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
                    <pattern>${consolePattern}</pattern>
                    <charset>${consoleLogCharset}</charset>
                </encoder>
            </appender>
        </then>
        <else>
            <!-- Create a no-op appender when console logging is disabled -->
            <appender name="radp_console_appender" class="ch.qos.logback.core.helpers.NOPAppender"/>
        </else>
    </if>
</included>
